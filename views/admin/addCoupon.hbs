    <div class="col-md-9">
        <div class="bg-light rounded d-flex  p-4 mt-3">
            <div class="container text-center">
                <h3>Enter the coupon deteils</h3>
                <div class="row align-items-center text-center">
                    {{#if exist}}
                    <div class="text-danger mx-auto">{{message}}</div>
                    {{else}}
                   <div class="text-success mx-auto" >{{message}}</div>
                   {{/if}}
                        <form class="mx-auto text-center" action="" style="width: 40vw;" method="post">
                            <div class="form-floating mb-3">
                                <input type="text" name="code" class="form-control" id="floatingInput" placeholder="Enter the coupon code here">
                                <label for="floatingInput">Coupon Code</label>
                            </div>
                            <div class="form-floating">
                                <input type="number" class="form-control" name="discount" id="floatingPassword" placeholder="discount">
                                <label for="floatingPassword">Discount Rate</label>
                            </div>
                            <div class="form-floating mt-3">
                                <input type="date" class="form-control" name="expire" id="floatingPassword" placeholder="Expirity Data">
                                <label for="floatingPassword">Expirity Date</label>
                            </div>
                            <button type="submit" id class="btn btn-success mt-2">Add</button>
                        </form>
      
                </div>
            </div>            
        </div>
    </div>
