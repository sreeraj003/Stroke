        <div class="mt-2 ms-2">
            <form action="/admin/periodSales" method="post">
                <center>
                    <label for="From">From&nbsp;</label>:&nbsp;<input type="date" name="fromDate" id="fromDate">&nbsp;&nbsp;&nbsp;&nbsp;
                    <label for="To">To&nbsp;</label>:&nbsp;<input type="date" name="toDate" id="toDate">
