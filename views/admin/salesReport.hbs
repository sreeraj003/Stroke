    <table id="myTable" style="width: 1000px;">
        <thead>
            <tr>
                <th>Order Id</th>
                <th>Date</th>
                <th>Products</th>
                <th>price</th>
                <th>Quantity</th>
                <th>total</th>
            </tr>
        </thead>
        <tbody>
            {{#each groupedData}}
            {{#each this}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.date}} <br></td>
                <td>{{#each this.product}}{{this.name}}&nbsp;{{this.category}} <br> {{/each}}</td>
                <td>{{#each this.product}}{{this.price}} <br> {{/each}}</td>
                <td>{{#each this.quantity}}{{this}} <br> {{/each}}</td>
                <td>{{#each this.amount}}{{this}} <br> {{/each}}</td>
            </tr>
            {{/each}}
            {{/each}}
        </tbody>
    </table>
