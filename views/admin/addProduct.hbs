            <div class="bg-light rounded d-flex  justify-content-between mt-5">
                <div class="container">
                    <div class="row">
                        <div class=" col-md-12 mx-auto">
                                    <center><button class=" stroke bg-light mt-2"><h2>STROKE</h2></button><br></center> <br>
                                    <center><button class=" stroke bg-light">Add Product</button></center>
                        </div>
                        <div class="col-md-3 ms-5">
                            <form class="row  formcont ms-5 g-3" style="float: right:left!important;;" action="" enctype="multipart/form-data" method="POST">
                                    <div>
                                    <p class="text-success">{{message}}</p>
                                    </div>
                                    <div class="col-md-12">
                                    <label for="inputName4" class="form-label">Product Name</label>
                                    <input type="text" name="name" class="form-control" style="width: 30vw!important;" id="inputName4">
                                    </div>
                                    <div class="col-md-12">
                                    <select class="form-select" name="category" style="width: 30vw!important;"  aria-label="Default select example">
                                        <option selected>Category</option>
                                        {{#each categories}}
                                        <option value="{{this.name}}">{{this.name}}</option>
                                        {{/each}}
                                    </select>
                                    <br>
                                    <div class="col-md-12">
                                    <label for="inputEmail4" class="form-label">Description</label>
                                    <input type="text" name="description" class="form-control" style="width: 30vw!important;" id="inputEmail4">
                                    </div>
                                    <div class="col-md-12">
                                    <label for="inputMobile4" class="form-label">Price</label>
                                    <input type="number" name="price" min="1" class="form-control" style="width: 30vw!important;" id="inputMobile4">
                                    </div>
                                    <div class="col-md-12">
                                    <label for="inputPassword4" class="form-label">Stock</label>
                                    <input type="number" name="stock" class="form-control" min="1" style="width: 30vw!important;" id="inputPassword4">
                                    </div>
                                    <div class="col-md-12">
                                    <label for="inputPassword4" class="form-label">Brand</label>
                                    <input type="text" name="brand" class="form-control" style="width: 30vw!important;" id="inputPassword4">
                                    </div>
                                    <div class="col-md-12">
                                    <label for="inputFile4" class="form-label">Image</label>
                                    <input style="width: 300px;" multiple type="file" name="image" style="width: 30vw!important;" class="form-control" id="inputFiled4">
                                    <p style="width: 250px;font-size: 13px;">Choose maximum <strong>five</strong> images only</p>
                                    </div><br>
                                    <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary subButton">Add Product</button>
                                    </div>
                            </form>
                        </div>
                    </div>
                </div>            
            </div>
    </div>
