<div class="container mt-5">
  <div class="row">
    <div class="col-md-3 mx-auto">
      <form class="row  formcont g-3" action="" method="post">
        <div class=" col-md-12 mx-auto">
            <center><button class=" stroke bg-light mb-2"><h2>STROKE</h2></button><br></center>
        </div>
        <div class="col-md-12 mx-auto">
            <center><button class="registerHead"><h1 class="regHeadText">LOGIN</h1></button></center>
        </div>
        <div class="row">
          <div class="col-12 mt-3 mb-1">
            <center><p class="text-danger">{{message}}</p></center>
          </div>
        </div>
